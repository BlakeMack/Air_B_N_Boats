  <%= form_with url: root_path , method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find your boat"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

       <section>
        <div class="container">
          <div class="row">
          <% @boats.each do |boat| %>
            <div class="col-md-4">
            <%= link_to boat_path(boat) do %>
              <div class="card card-01">
              <% if boat.photo.attached? %>
                <%=cl_image_tag boat.photo.key %>
              <% else %>
                <%= image_tag "luxury-yacht-charter-mallorca.jpg", class: "card-img-top" %>
              <% end %>
                  <div class="card-body">
                    <span class="badge-box"><i class="fa fa-check"></i></span>
                    <h4 class="card-title">Name: <%= boat.name %></h4>
                    <p class="card-text">Category: <%= boat.category %></p>
                    <p class="card-text">Location: <%= boat.location %></p>
                    <p class="card-text">
                    Rating:
                    <%  boat.rating do  %>
                      <i class="bi bi-star-fill"></i>
                    <% end %>
                    </p>
                  </div>
              </div>
            <% end %>
            </div>
          <% end %>
          </div>
          </div>
        </div>
      </section>
