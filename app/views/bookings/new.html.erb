<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow" style="color: black;">
        <h3>Book this boat!</h3>
        <%= simple_form_for [@boat, @booking] do |f| %>
          <%= f.input :start_date, required: true %>
          <%= f.input :end_date, required: true %>
          <%= f.submit class: 'btn btn-ghost' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
