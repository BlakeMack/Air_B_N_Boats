<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new boat listing!</h3>
        <%= simple_form_for @boat do |f| %>
          <%= f.input :name, placeholder: 'Queen Elizabeth' %>
          <%= f.input :category, placeholder: 'Super Yacht' %>
          <%= f.input :available, placeholder: 'Now' %>
          <%= f.input :capacity, placeholder: 'XX tonnes' %>
          <%= f.input :location, placeholder: 'Bournemouth' %>
          <%= f.input :price, placeholder: '' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
