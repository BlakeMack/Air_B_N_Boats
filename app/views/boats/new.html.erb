<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new boat listing!</h3>
        <%= simple_form_for @boat do |f| %>
          <%= f.input :name, required: true, placeholder: 'Queen Elizabeth' %>
          <%= f.input :category, :collection => ["Luxury", "Fishing", "Sailing", "Superyacht", "River Boat", "Speedboat", "Houseboat", "Banana Boat"], prompt: "Add a category" %>
          <%= f.input :capacity, required: true, placeholder: 'XX tonnes' %>
          <%= f.input :location, required: true, placeholder: 'Bournemouth', label: "Address" %>
          <%= f.input :price, required: true, placeholder: '' %>
          <%= f.input :rating, required: true, placeholder: '' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
