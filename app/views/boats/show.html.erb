

<div class="container_2">
<div class="card-trip">
<% if @boat.photo.attached? %>
  <%= cl_image_tag @boat.photo.key %>
<% else %>
  <%= image_tag "#{@boat.category.parameterize}.jpg" %>
 <% end %>

  <div class="card-trip-main-infos">
    <div class="card-trip-infos">
      <h2><%= @boat.name  %></h2>
      <h2> <i> <%= @boat.category %> </i></h2>
      <p> Available: <%= @boat.available %></p>
      <p> Capacity: <%= @boat.capacity %></p>
      <p> Location: <%= @boat.location %></p>
      <p> Rating: <%= @boat.rating %></p>
    </div>
    <% if @boat.user.photo.attached? %>
      <%= cl_image_tag @boat.user.photo.key, class: "card-trip-user avatar-bordered" %>
    <% else %>
      <%= image_tag "defult-profile-1.jpg", class: "card-trip-user -bordered" %>
    <% end %>
    <div>
      <h2 class="card-trip-pricing">Â£<%= @boat.price %> per week</h2>
      <% if @boat.user == current_user %>
      <%= link_to "Edit", edit_boat_path(@boat), class: "btn btn-ghost" %>
      <% else %>
       <%= link_to "Book now", boat_path + '/bookings/new', class: "btn btn-ghost" %>
      <% end %>
        <%= link_to "Back to all boats", root_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>
  <div style="width: 500px; height: 525px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
